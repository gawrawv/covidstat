{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "no-console": "warn",
    "no-unused-vars": "warn",
    "prettier/prettier": ["error", { "doubleQuote": false, "parser": "flow" }],
    "no-restricted-syntax": [
      "warn",
      "WithStatement",
      "BinaryExpression[operator='in']"
    ]
  }
}
